datasource db {
    provider = "mysql"
    // url = "***"
    url = "***"


}

generator db {
    provider = "go run github.com/prisma/prisma-client-go"
    output   = "./db/db_gen.go"
    package  = "db"
}

model User {
    id        String   @default(cuid()) @id
    createdAt DateTime @default(now())
    email     String   @unique
    name      String?
    age       Int?
    password  String?
    posts     Post[]
}

model Post {
    id        String   @default(cuid()) @id
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt
    title     String
    content   String

    author   User   @relation(fields: [authorID], references: [id])
    authorID String
}
